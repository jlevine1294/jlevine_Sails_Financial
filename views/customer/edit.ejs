<form action="/customer/update/<%= customer.id %>" method="POST" >
  <h2>Create a Customer</h2>

  <input value="<%= customer.name %>" type="text" name="name" ><br />
  <input value="<%= customer.email %>" type="text" name="email" ><br />
  <input value="<%= customer.homephone %>" type="text" name="homephone" > <br />
  <input value="<%= customer.cellphone %>" type="text" name="cellphone" ><br />
  <input value="<%= customer.street %>" type="text" name="street"  />
  <input value="<%= customer.city %>" type="text" name="city" />
  <input value="<%= customer.state %>" type="text" name="state" />
  <input value="<%= customer.zip %>" type="number" name="zip" />

  <input type="submit" value="Edit customer" />
</form>


